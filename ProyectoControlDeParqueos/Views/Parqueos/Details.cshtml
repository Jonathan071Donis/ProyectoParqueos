@model ProyectoControlDeParqueos.Models.Parqueo

@{
    // ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-3">Detalles del Parqueo</h1>

<div>
    <h4>Parqueo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreParqueo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreParqueo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ubicacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ubicacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.capacidadTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.capacidadTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.espaciosDisponibles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.espaciosDisponibles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>
</div>

<div class="btn-group mt-3" role="group">
    <a asp-action="Edit" asp-route-id="@Model?.idParqueo" class="btn btn-warning btn-sm">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm ms-1">Regresar</a>
</div>
