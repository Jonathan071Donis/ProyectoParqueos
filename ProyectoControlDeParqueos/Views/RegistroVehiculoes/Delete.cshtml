@model ProyectoControlDeParqueos.Models.RegistroVehiculo

@{
    ViewData["Title"] = "Eliminar Registro de Vehículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Registro de Vehículo</h1>

<h3>¿Está seguro de que desea eliminar este registro?</h3>
<div>
    <h4>Detalles del Registro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.placa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.placa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idRegistroVehiculo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Regresar a la Lista</a>
    </form>
</div>
