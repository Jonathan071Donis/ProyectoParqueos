@model ProyectoControlDeParqueos.Models.ReporteGeneral

<div class="container my-5 p-4 border rounded shadow" style="background-color: white; max-width: 210mm;">
    <div class="text-center mb-4">
        <h1 class="display-4">Reporte General</h1>
        <p class="lead">Informe detallado de vehículos, tarifas y parqueos</p>
        <hr class="my-4">
        <!-- Botón para imprimir -->
        <button class="btn btn-primary" onclick="window.print()">Imprimir Reporte</button>
    </div>

    <h2 class="mb-3">Vehículos Registrados</h2>
    <table class="table table-striped table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Color</th>
                <th>Fecha de Ingreso</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model.Vehiculos)
            {
                <tr>
                    <td>@vehiculo.placa</td>
                    <td>@vehiculo.marca</td>
                    <td>@vehiculo.modelo</td>
                    <td>@vehiculo.color</td>
                    <td>@vehiculo.fechaIngreso.ToShortDateString()</td>
                    <td>@vehiculo.estado</td>
                </tr>
            }
        </tbody>
    </table>

    <h2 class="mt-5 mb-3">Tarifas Activas</h2>
    <table class="table table-striped table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th>Descripción</th>
                <th>Costo por Hora</th>
                <th>Costo por Día</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarifa in Model.Tarifas)
            {
                <tr>
                    <td>@tarifa.descripcion</td>
                    <td>Q @tarifa.costoPorHora.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)</td> <!-- Costo por Hora con punto decimal -->
                    <td>Q @tarifa.costoPorDia.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)</td> <!-- Costo por Día con punto decimal -->
                    <td>@tarifa.estado</td>
                </tr>
            }
        </tbody>
    </table>

    <h2 class="mt-5 mb-3">Parqueos</h2>
    <table class="table table-striped table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Ubicación</th>
                <th>Capacidad Total</th>
                <th>Espacios Disponibles</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parqueo in Model.Parqueos)
            {
                <tr>
                    <td>@parqueo.nombreParqueo</td>
                    <td>@parqueo.ubicacion</td>
                    <td>@parqueo.capacidadTotal</td>
                    <td>@parqueo.espaciosDisponibles</td>
                    <td>@parqueo.estado</td>
                </tr>
            }
        </tbody>
    </table>
</div>
