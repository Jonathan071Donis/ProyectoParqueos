@model ProyectoControlDeParqueos.Models.ReporteVehiculos

<div class="container my-5 p-4 border rounded shadow" style="background-color: white; max-width: 210mm; font-family: Arial, sans-serif;">
    <div class="text-center mb-4">
        <h1 class="display-4">Reporte de Vehículos Registrados</h1>
        <p class="lead">Lista de todos los vehículos registrados</p>
        <hr class="my-4">
    </div>

    <table class="table table-striped table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Color</th>
                <th>Fecha de Ingreso</th>
                <th>Estado</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model.Vehiculos)
            {
                <tr>
                    <td>@vehiculo.placa</td>
                    <td>@vehiculo.marca</td>
                    <td>@vehiculo.modelo</td>
                    <td>@vehiculo.color</td>
                    <td>@vehiculo.fechaIngreso.ToShortDateString()</td>
                    <td>@vehiculo.estado</td>
                  
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Estilos generales para impresión */
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 100%;
        margin: 0;
        padding: 10mm;
        border: none;
        box-shadow: none;
    }

    h1, h2, h3 {
        margin: 0;
        padding: 0;
        page-break-after: avoid;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        page-break-inside: auto;
    }

    thead {
        display: table-header-group; /* Mantiene el encabezado en cada página */
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f8f9fa; /* Color de fondo para encabezados */
    }

    tr {
        page-break-inside: avoid; /* Evita el salto de página dentro de una fila */
        page-break-after: auto; /* Permite que las filas sigan en la misma página */
    }
</style>
